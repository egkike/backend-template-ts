{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,                // ← Esto es clave: ahora SÍ genera archivos
    "outDir": "./dist",             // carpeta de salida
    "declaration": false,           // opcional, no genera .d.ts
    "sourceMap": false,             // opcional, para producción
    "allowImportingTsExtensions": false  // quita extensiones .ts en build
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules"]
}