{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "noEmit": true, // ← Esto es lo clave (no genera .js, solo valida tipos)
    "allowImportingTsExtensions": true,
    "noEmitOnError": false, // opcional, para no detener en errores menores
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // ← Esto es clave para forzar la carga de express.d.ts
    ],
    "types": ["express"] // Fuerza carga de express + tus extensiones
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
